{
    "name": "firefly-electron",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "prepare": "bash scripts/prepare.sh",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.firefly",
        "productName": "Firefly",
        "win": {
            "target": "nsis",
            "icon": "src/images/firefly-icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": false
        },
        "files": [
            "**/*",
            "bundle/**/*",
            "!node_modules/.cache/**"
        ],
        "extraResources": [
            {
                "from": "bundle/",
                "to": "bundle",
                "filter": [
                    "**/*"
                ]
            }
        ]
    },
    "keywords": [],
    "author": "Aaron M. Geller & Alex B. Gurvich",
    "license": "GNU Affero General Public License v3.0",
    "description": "An electron wrapper for the Firefly visualization app",
    "devDependencies": {
        "electron": "^37.2.1",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "detect-port": "^2.1.0",
        "electron-is-dev": "^3.0.1",
        "find-process": "^2.0.0",
        "tree-kill": "^1.2.2"
    }
}
