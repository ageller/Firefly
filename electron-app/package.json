{
    "name": "firefly-electron",
    "version": "0.1.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "prepare": "bash scripts/prepare.sh"
    },
    "build": {
        "appId": "com.firefly",
        "productName": "Firefly",
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "src/icons/app-icon.ico"
        },
        "extraResources": [
            {
                "from": "resources/firefly",
                "to": "firefly",
                "filter": [
                    "**/*"
                ]
            }
        ]
    },
    "keywords": [],
    "author": "Aaron M. Geller & Alex B. Gurvich",
    "license": "GNU Affero General Public License v3.0",
    "description": "An electron wrapper for the Firefly visualization app",
    "devDependencies": {
        "electron": "^37.2.1"
    },
    "dependencies": {
        "detect-port": "^2.1.0",
        "electron-is-dev": "^3.0.1",
        "tree-kill": "^1.2.2"
    }
}
