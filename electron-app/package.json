{
    "name": "firefly-electron",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "prepare": "bash scripts/prepare.sh",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.firefly",
        "productName": "Firefly",
        "files": [
            "**/*",
            "dist/**/*",
            "src/**/*",
            "bundle/**/*",
            "!node_modules/.cache/**"
        ],
        "extraResources": [
            {
                "from": "bundle/",
                "to": "bundle",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "src/images/firefly-icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": false
        },
        "mac": {
            "target": ["dmg", "zip"],
            "category": "public.app-category.education",
            "icon": "src/images/firefly-icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false
        },
        "dmg": {
            "icon": "src/images/firefly-icon.icns",
            "contents": [
                { "x": 130, "y": 220, "type": "file" },
                { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
            ]
        },
        "linux": {
            "target": ["AppImage", "deb"],
            "category": "Education",
            "icon": "src/images/firefly-icon.png",
            "desktop": {
                "Name": "Firefly",
                "Comment": "An electron wrapper for the Firefly visualization app"
            }
        }
    },
    "keywords": [],
    "author": "Aaron M. Geller & Alex B. Gurvich",
    "license": "GNU Affero General Public License v3.0",
    "description": "An electron wrapper for the Firefly visualization app",
    "devDependencies": {
        "electron": "^37.2.1",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "detect-port": "^2.1.0",
        "electron-is-dev": "^3.0.1",
        "find-process": "^2.0.0",
        "tree-kill": "^1.2.2"
    }
}
